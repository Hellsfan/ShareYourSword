@model ShareYourSword.Models.Post

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Post</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Cinzel|Cinzel+Decorative|Roboto+Slab&display=swap" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: 'Roboto Slab', serif;
            background-image: url('/images/0.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            color: #f4f1de;
        }

        h1 {
            text-align: center;
            font-family: 'Cinzel Decorative', cursive;
            font-size: 48px;
            margin-bottom: 40px;
            color: #ffe5d9;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.8);
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 40px;
            background-color: rgba(0, 0, 0, 0.8);
            box-shadow: 2px 2px 10px #000;
            border-radius: 10px;
        }

        dl {
            color: #f4f1de;
        }

        dt {
            font-weight: bold;
        }

        dd {
            margin-bottom: 10px;
        }

        .btn {
            font-family: 'Cinzel', serif;
            padding: 10px 20px;
            border-radius: 5px;
            background-color: #ffe5d9;
            color: #4b3621;
            text-decoration: none;
            transition: all 0.2s;
        }

            .btn:hover {
                background-color: #4b3621;
                color: #ffe5d9;
            }
    </style>
</head>

<body style="margin-bottom:30px;">
    <h1>Delete Post</h1>

    <div class="container">
        <p>Are you sure you want to delete this post?</p>

        <dl>
            <dt>Name</dt>
            <dd>@Model.Name</dd>

            <dt>Email</dt>
            <dd>@Model.Mail</dd>

            <dt>Comment</dt>
            <dd>@Model.Comment</dd>

            <dt>Date</dt>
            <dd>@Model.Date.ToShortDateString()</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <button type="submit" class="btn">Confirm</button>
            </div>
        </form>

        <div style="margin-top:10px">
            <a asp-action="Index" class="btn">Back to List</a>
        </div>
    </div>
</body>

</html>

